# YNAB Weekly Wrap Configuration

# YNAB API Configuration
ynab:
  api_token: "${YNAB_API_TOKEN}"
  budget_id: "${YNAB_BUDGET_ID}"
  base_url: "https://api.ynab.com/v1"

# Telegram Bot Configuration
telegram:
  bot_token: "${TELEGRAM_BOT_TOKEN}"
  chat_id: ${TELEGRAM_CHAT_ID}

# Scheduling Configuration
schedule:
  cron: "${SCHEDULE_CRON:-0 9 * * 1}"      # Monday 9 AM (default)
  timezone: "${TZ:-Australia/Sydney}"       # Timezone for cron

# Logging Configuration
logging:
  level: "${LOG_LEVEL:-info}"               # debug, info, warn, error
  format: "json"                             # json or console

# Budget Analysis Thresholds
thresholds:
  at_risk_percent: 75                        # Categories at 75%+ are flagged
  over_budget_percent: 100                   # Categories over 100% are concerns
  top_categories_count: 3                    # Number of top wins/concerns to show

# Weekly Analysis Configuration
weekly_analysis:
  include_off_budget: false                  # Include off-budget accounts
  include_transfers: false                   # Include transfer transactions
  focus_categories: []                       # Empty = all categories. Add specific category names to focus on those
  exclude_categories:                        # Categories to exclude from analysis
    - "Internal Transfer"
    - "Transfer"
